#parse("header.vm")
<div class="container">
    <div class="list-group">
        #foreach ($photo in $photos)
            <div class="col-lg-6">
                <div class="list-group-item">
                    <div class="row">
                        <div class="col-lg-2">
                            <a href="/buy?pt=$photo.uuid"><img class="thumbnail" src="$photo.filePath"
                                                               alt="Card image cap"></a>
                        </div>
                        <div class="col-lg-8 col-lg-offset-2">
                            <p class="card-text">Gemaakt door $photo.photographer.name, op $photo.captureDate</p>
                            #set($priceRound = $photo.price - .01)
                            <button class="btn btn-primary" href="/buy?pt=$photo.uuid">Buy this photo for
                                only $priceRound</button>
                        </div>
                    </div>
                </div>
            </div>
        #end
    </div>
</div>
#parse("footer.vm")